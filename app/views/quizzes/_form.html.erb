<%= render 'shared/errors', obj: @quiz %>

<div class='well'>
  <%= form_for @quiz do |f| %>
    <div class='control-group'>
      <%= f.label :Category %>
      <%= f.text_field :category %>
    </div>
    <div class='control-group'>
      <% f.label "Categories" %>
      <%= f.collection_check_boxes :question_ids, Question.all, :id, :question do |cb| %>
        <% cb.label(class: "checkbox inline") {cb.check_box(class: "checkbox") + cb.text} %>
      <% end %>
     </div>
    <%= f.submit(@quiz.new_record? ? 'Create Quiz' : 'Update Quiz', class: 'btn btn-primary')%>
  <% end %>
</div>

